{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PyFRC: _Deploy",
            "type": "shell",
            "windows": {
                "command": "python ${workspaceFolder}\\robot.py deploy --skip-tests"
            },
            "linux": {
                "command": "python ${workspaceFolder}/robot.py deploy --skip-tests"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "icon": {
                "id": "cloud-upload"
            }
        },
        {
            "label": "PyFRC: _Activate Debug",
            "type": "shell",
            "windows": {
                "command": "ssh lvuser@roboRIO-1736-FRC.local -t 'touch /home/lvuser/py/enableDebug; ./robotCommand || true; echo Waiting for robot program to start...; sleep 5' "
            },
            "linux": {
                "command": "ssh lvuser@roboRIO-1736-FRC.local -t 'touch /home/lvuser/py/enableDebug; ./robotCommand || true; echo Waiting for robot program to start...; sleep 5' "
            },
            "group": {
                "kind": "build",
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "icon": {
                "id": "cloud-upload"
            }
        },
        {
            "label": "PyFRC: _Run Lint Check",
            "type": "shell",
            "windows": {
                "command": "pylint --rcfile=${workspaceFolder}\\.pylintrc ${workspaceFolder}\\**\\*.py"
            },
            "linux": {
                "command": "pylint --rcfile=${workspaceFolder}/.pylintrc $(git ls-files '${workspaceFolder}/*.py')"
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "icon": {
                "id": "microscope"
            }
        },
        {
            "label": "PyFRC: _Run Test Suite",
            "type": "shell",
            "windows": {
                "command": "python ${workspaceFolder}\\robot.py test"
            },
            "linux": {
                "command": "python ${workspaceFolder}/robot.py test"
            },
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "icon": {
                "id": "check-all"
            }
        },
        {
            "label": "PyFRC: _Run Simulation",
            "type": "shell",
            "windows": {
                "command": "python ${workspaceFolder}\\robot.py sim"
            },
            "linux": {
                "command": "python ${workspaceFolder}/robot.py sim"
            },
            "group": {
                "kind": "test",
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated",
                "clear": true,
                "focus": true,
                "showReuseMessage": false
            },
            "problemMatcher": [],
            "icon": {
                "id": "check-all"
            }
        },
        {
            "label": "PyFRC: _View Netconsole",
            "type": "shell",
            "windows": {
                "command": "py -3 -m netconsole roboRIO-1736-frc.local"
            },
            "linux": {
                "command": "netconsole roboRIO-1736-frc.local"
            },
            "group": {
                "kind": "build",
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared",
                "clear": true,
                "focus": true,
                "showReuseMessage": false,
                "revealProblems": "onProblem"
            },
            "problemMatcher": [],
            "icon": {
                "id": "check-all"
            }
        }
    ]
}