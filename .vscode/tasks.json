{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "PyFRC: _Deploy",
            "type": "shell",
            "command": "",
            "windows": {
                "command": "Start-Process powershell {$host.ui.RawUI.WindowTitle = 'FRCwindow';py '${workspaceFolder}\\robot.py' deploy --nc --skip-tests --no-version-check;  Write-Host 'All done - Press Enter to Close' -ForegroundColor Green -BackgroundColor Black; Read-Host -Prompt ' '}"
            },
            "linux": {
                "command": "python robot.py deploy --skip-tests"
            },
            "group": "none",
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "PyFRC: _Run Lint Check",
            "type": "shell",
            "command": "",
            "windows": {
                "command": "Start-Process powershell {$host.ui.RawUI.WindowTitle = 'FRCwindow';pylint --rcfile=${workspaceFolder}\\.pylintrc ${workspaceFolder}\\**\\*.py;  Write-Host 'All done - Press Enter to Close' -ForegroundColor Green -BackgroundColor Black; Read-Host -Prompt ' '}"
            },
            "linux": {
                "command": "pylint --rcfile=.pylintrc $(git ls-files '*.py')"
            },
            "group": "none",
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
    ]
}